@model Book_Shop.Data.Entities.Book

<h1 style="text-align: center;" >Edit Book</h1>
<div asp-validation-summary="All" class="text-danger"></div>

<form class="row g-3" asp-action="Edit" method="post">
        <div class="col-md-12">
            <label asp-for="Title" class="form-label">Title</label>
            <input asp-for="Title" type="text" class="form-control" placeholder="Enter product title">
            <span asp-validation-for="Title" class="small text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="TrilogiesId" class="form-label">Trilogies</label>
            <select asp-for="TrilogiesId" asp-items="@ViewBag.Trilogies" class="form-select">
                <option disabled selected>Choose Trilogie...</option>
            </select>
            <span asp-validation-for="TrilogiesId" class="small text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="NumberOfPages" class="form-label">Number Of Pages</label>
            <input asp-for="NumberOfPages" type="number" class="form-control" min="0" placeholder="Enter number of page">
            <span asp-validation-for="NumberOfPages" class="small text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="AuthorId" class="form-label">Author</label>
            <select asp-for="AuthorId" asp-items="@ViewBag.Authors" class="form-select">
                <option disabled selected>Choose Author...</option>
            </select>
            <span asp-validation-for="AuthorId" class="small text-danger"></span>
        </div>
    <div class="col-md-6">
        <label asp-for="Stock" class="form-label">Stock</label>
        <input asp-for="Stock" type="number" min="0" max="1000" class="form-control" placeholder="Enter Stock">
        <span asp-validation-for="Stock" class="small text-danger"></span>
    </div>
        <div class="col-md-6">
            <label asp-for="GenreId" class="form-label">Genre</label>
            <select asp-for="GenreId" asp-items="@ViewBag.Genres" class="form-select">
                <option disabled selected>Choose Genre...</option>
            </select>
            <span asp-validation-for="GenreId" class="small text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Year" class="form-label">Year</label>
            <input asp-for="Year" type="number" class="form-control" min="0" placeholder="Enter year of publicated">
            <span asp-validation-for="Year" class="small text-danger"></span>
        </div>
    <div class="col-md-6">
        <label asp-for="ImageUrl" class="form-label">Image URL</label>
        <input asp-for="ImageUrl" type="url" class="form-control" placeholder="Enter Image URL">
        <span asp-validation-for="ImageUrl" class="small text-danger"></span>
    </div>
        <div class="col-md-6">
            <label asp-for="Price" class="form-label">Price</label>
            <input asp-for="Price" min="0" step="0.01" type="number" class="form-control" placeholder="Enter price">
            <span asp-validation-for="Price" class="small text-danger"></span>
        </div>
        <div class="col-md-12">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter description"></textarea>
            <span asp-validation-for="Description" class="small text-danger"></span>
        </div>
        <div class="col-6">
            <a asp-action="Index" class="btn btn-dark w-100">Back</a>
        </div>
        <div class="col-6">
            <button type="submit" class="btn btn-success w-100">Edit</button>
        </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
