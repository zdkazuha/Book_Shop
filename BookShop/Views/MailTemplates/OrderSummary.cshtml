@using Book_Shop.Models
@model OrderSummaryModel

@{
    ViewData["Title"] = "Order Summary";
    Layout = "~/Views/Shared/_MailLayout.cshtml";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f9f9f9;
    }

    .order-container {
        max-width: 600px;
        margin: 20px auto;
        background: #ffffff;
        border-radius: 12px;
        padding: 20px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

    .order-header {
        text-align: center;
        margin-bottom: 20px;
    }

        .order-header h1 {
            font-size: 22px;
            color: #333;
        }

        .order-header span {
            color: #007BFF;
            font-weight: bold;
        }

    .order-user {
        margin: 10px 0 20px 0;
        font-size: 16px;
    }

    .order-table {
        width: 100%;
        border-collapse: collapse;
    }

        .order-table th {
            background-color: #007BFF;
            color: white;
            padding: 10px;
            text-align: left;
        }

        .order-table td {
            padding: 10px;
            border-bottom: 1px solid #ddd;
        }

    .order-total {
        margin-top: 20px;
        font-size: 18px;
        text-align: right;
        font-weight: bold;
    }
</style>

<div class="order-container">
    <div class="order-header">
        <h1>Order #<span>@Model.OrderNumber</span> Summary</h1>
    </div>

    <p class="order-user">👤 User: <strong>@Model.UserName</strong></p>

    <table class="order-table">
        <thead>
            <tr>
                <th>Book Title</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Books)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Price$</td>
                </tr>
            }
        </tbody>
    </table>

    <p class="order-total">
        Total: @Model.TotalPrice$ / Quantity: @Model.ItemsCount
    </p>
</div>
