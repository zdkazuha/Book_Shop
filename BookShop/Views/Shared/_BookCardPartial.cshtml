@model Book

<div class="card" style="width: 18rem; height: 700px;">

    <div style="height: 450px" >
        <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Title" style="height: 450px; width: 286px;">
    </div>

    <div class="card-body" style="height: 250px" >

        <div style="height: 150px;">
            <h5 class="card-title" style="height: 50px">@Model.Title</h5>

            <p class="card-text">@Model.Description</p>
            <p class="card-text">Genre - @Model.Genres?.GenreName</p>
            <p class="card-text">Year - @Model.Year : Price @Model.Price$</p>
        </div>

        <hr style="width: 288px; margin-left: -17px" /> 

        <div style="height: 50px; margin-top: -2px ">
            <a asp-controller="Cart" asp-action="Add" asp-route-id="@Model.Id" class="btn btn-primary">Add to cart</a>
            <button type="button" class="btn btn-success">Buy Book</button>
        </div>

    </div>
</div>